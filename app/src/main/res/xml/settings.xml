<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_showSuccessNotification"
        android:summary="@string/success_notification_summary"
        android:title="@string/success_notification" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="pref_showSuccessNotification"
        android:key="pref_copyToClipboard"
        android:summary="@string/auto_copy_summary"
        android:title="@string/auto_copy" />

</PreferenceScreen>